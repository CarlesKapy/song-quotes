{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/",
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "sourceMap": false,
    "noUnusedLocals": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/build/*",
    "**/node_modules/*"
  ]
}